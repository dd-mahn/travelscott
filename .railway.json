{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm install && npm run build",
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "cd backend && npm run start:prod",
    "restartPolicyType": "on-failure",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100
  }
}
